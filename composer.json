{
    "name": "musavirchukkan/laravel-meta-integration",
    "description": "Laravel package for Meta Platform integration with authentication, leads, forms, webhooks, and insights",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Abdul Musavir Chukkan",
            "email": "abdulmusavirc@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",             
        "laravel/framework": "^8.0|^9.0|^10.0", 
        "guzzlehttp/guzzle": "^7.0",  
        "laravel/socialite": "^5.0"   
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",        
        "orchestra/testbench": "^6.0|^7.0|^8.0",  
        "mockery/mockery": "^1.4"                
    },
    "autoload": {
        "psr-4": {
            "MusavirChukkan\\MetaIntegration\\": "src/" 
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MusavirChukkan\\MetaIntegration\\Tests\\": "tests/"  
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MusavirChukkan\\MetaIntegration\\MetaServiceProvider"
            ],
            "aliases": {
                "Meta": "MusavirChukkan\\MetaIntegration\\Facades\\Meta"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    }
}